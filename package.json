{
  "name": "react-complete-guide",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/plugin-syntax-jsx": "^7.17.12",
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@reduxjs/toolkit": "^1.8.2",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "jquery": "^3.2.1",
    "react": "^18.0.0",
    "react-bootstrap-table-next": "^4.0.3",
    "react-bootstrap-table2-filter": "^1.3.3",
    "react-custom-scrollbars-2": "^4.4.0",
    "react-dom": "^18.0.0",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "react-scripts": "4.0.1",
    "redux-saga": "^1.1.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts -r @cypress/instrument-cra start",
    "build": "react-scripts build",
    "test": "react-scripts test --testPathIgnorePatterns=exclude",
    "test-cov": "react-scripts test --coverage --watchAll --testPathIgnorePatterns=exclude",
    "test:watch": "react-scripts test --watch --testPathIgnorePatterns=exclude ----detectOpenHandles ",
    "eject": "react-scripts eject",
    "clean:install": "rm -rf node_modules && npm cache clean --force && npm install"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/components/**/*.js",
      "src/sagas/*.js",
      "src/store/*.js",
      "src/App.js",
      "src/index.js"
    ],
    "exclude": "src/pages/Film.js"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,js,tsx,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 70,
        "functions": 70,
        "lines": 70
      }
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/",
      "<rootDir>/src/pages/__tests__/exclude",
      "<rootDir>/src/hooks"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.17.12",
    "@cypress/code-coverage": "^3.10.0",
    "@cypress/instrument-cra": "^1.4.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.0",
    "babel-plugin-istanbul": "^6.1.1",
    "cypress": "^10.0.3",
    "date-fns": "^2.28.0",
    "formik": "^2.2.9",
    "msw": "^0.42.0",
    "nyc": "^15.1.0"
  }
}
